<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_itemBookTripImage"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/tnkelimutu" />

    <TextView
        android:id="@+id/tv_itemBookTripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@id/iv_itemBookTripImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Kelimutu National Park" />

    <TextView
        android:id="@+id/tv_itemBookTripDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tv_itemBookTripName"
        app:layout_constraintTop_toBottomOf="@id/tv_itemBookTripName"
        tools:text="Booked for 09 Feb 2024"/>

</androidx.constraintlayout.widget.ConstraintLayout>